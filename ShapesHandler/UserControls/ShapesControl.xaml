<UserControl x:Class="ShapesHandler.UserControls.ShapesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" Height="600">
    <ScrollViewer>
    <Canvas Width="500" Height="700" Name="canvasField1" Background="White" AllowDrop="True"
                            Drop="canvasField_Drop" DragEnter="canvasField_DragEnter"                
                            MouseLeftButtonDown="canvasField_MouseLeftButtonDown"
                            MouseRightButtonDown="canvasField_MouseRightButtonDown"
                            MouseRightButtonUp="canvasField_MouseRightButtonUp"
                            MouseMove="canvasField_MouseMove">
   </Canvas>
  </ScrollViewer>
</UserControl>
